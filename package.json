{
    "name": "root",
    "private": true,
    "scripts": {
        "build": "lerna run build",
        "lint": "concurrently 'npm:lint-ts' 'npm:lint-css'",
        "lint-ts": "npx eslint --no-eslintrc -c .eslintrc packages/*/src/**/*.ts",
        "lint-css": "npx stylelint --config .stylelintrc packages/*/src/**/*.css",
        "fix": "npx prettier --write packages/*/src/**/*.{js,ts,css,json,md}",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.17.0",
        "@typescript-eslint/parser": "^2.17.0",
        "css-loader": "^3.4.1",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-prettier": "^3.1.2",
        "html-webpack-inline-source-plugin": "0.0.10",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^4.2.0",
        "lerna": "^3.20.2",
        "lint-staged": "^10.0.2",
        "prettier": "1.19.1",
        "style-loader": "^1.1.2",
        "stylelint-config-standard": "^19.0.0",
        "ts-loader": "^6.2.1",
        "typescript": "^3.7.4",
        "url-loader": "^3.0.0",
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.10"
    },
    "dependencies": {
        "concurrently": "^5.0.2",
        "figma-gridgen": "file:packages\\figma-gridgen",
        "stylelint": "^13.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsc --noEmit && lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,css,json,md}": [
            "prettier --write",
            "git add"
        ],
        "*.{ts}": [
            "eslint --no-eslintrc -c .eslintrc --fix",
            "git add"
        ],
        "*.css": [
            "stylelint --config .stylelintrc --fix",
            "git add"
        ]
    }
}
